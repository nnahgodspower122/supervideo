<%= content_tag "div", id: "downvote-#{post.id}" do %>
  <%= link_to downvote_post_path(post), method: :patch, remote: true, data: { disable_with: "Votin..." } do %>
    <% if current_user&.voted_down_on? post %>
      <i class="far fa-thumbs-down text-danger"></i>
      downvote
    <% else %>
      <i class="far fa-thumbs-down text-secondary"></i>
      unvote
    <% end %>
  <% end %>
<% end %>