<%= content_tag "div", id: "upvote-#{post.id}" do %>
  <%= link_to upvote_post_path(post), method: :patch, remote: true, data: { disable_with: "Votin..." } do %>
    <% if current_user&.voted_up_on? post %>
      <i class="far fa-thumbs-up text-success"></i>
      unvote
    <% else %>
      <i class="far fa-thumbs-up text-secondary"></i>
      vote!
    <% end %>
  <% end %>
<% end %>