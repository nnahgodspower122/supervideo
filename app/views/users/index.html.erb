<h1>
    Users: <%= @users.length %> /
    <%= User.count %>
</h1>

<%= search_form_for @q do |f| %>
    <%= f.label :email_cont %>
    <%= f.search_field :email_cont %>
    <%= f.submit %>
    <% if params[:q].present? %>
        <%= link_to users_path do %>
            <i class="fa-solid fa-rotate-right" style="text-transform: uppercase;"> Refresh</i>
        <% end %>
    <% end %>
<% end %>

<hr>
<% @users.each do |user| %>
    <%= render 'users/user', user: user %>
    <br>
<% end %>

<%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>